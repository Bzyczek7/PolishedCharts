# Database
POSTGRES_USER=trading
POSTGRES_PASSWORD=password
POSTGRES_DB=tradingalert
DATABASE_URL=postgresql+asyncpg://trading:password@localhost:5432/tradingalert

# Redis
REDIS_URL=redis://localhost:6379/0

# Firebase Authentication
# Firebase service account key (base64-encoded JSON) for backend Admin SDK
# Generate from Firebase Console → Project Settings → Service Accounts → Generate Private Key
# Then encode to base64: cat ~/Downloads/polishedcharts-firebase-key.json | base64 -w 0
FIREBASE_SERVICE_ACCOUNT_KEY=your_base64_encoded_service_account_key_here
FIREBASE_PROJECT_ID=your-project-id

# Telegram Bot API (for alarm notifications)
# Encryption key for storing Telegram credentials securely (AES-256-GCM)
# MUST be exactly 32 bytes (256 bits). Generate with: python -c "import os; print(os.urandom(32).hex())"
TELEGRAM_ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here
